@page "{id:int}"
@model VirtualEvent_WEB.Pages.Events.DeleteModel
@{
    ViewData["Title"] = "Delete Trip";
}

<h2>Delete Trip</h2>
<p>Are you sure you want to delete this trip?</p>

<form method="post">
    <input type="hidden" asp-for="TripToDelete.Id" />
    <p><strong>@Model.TripToDelete.Title</strong></p>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Events/ViewTrips" class="btn btn-secondary">Cancel</a>
</form>
