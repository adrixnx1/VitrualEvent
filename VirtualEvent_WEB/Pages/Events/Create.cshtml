@page
@model VirtualEvent_WEB.Pages.Events.CreateModel
@{
    ViewData["Title"] = "Add Event";
}

<h2>Add a New Event</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="NewEvent.Title" class="form-label"></label>
        <input asp-for="NewEvent.Title" class="form-control" />
        <span asp-validation-for="NewEvent.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewEvent.Description" class="form-label"></label>
        <textarea asp-for="NewEvent.Description" class="form-control"></textarea>
        <span asp-validation-for="NewEvent.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewEvent.ImageUrl" class="form-label"></label>
        <input asp-for="NewEvent.ImageUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="NewEvent.Date" class="form-label"></label>
        <input asp-for="NewEvent.Date" type="date" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>
