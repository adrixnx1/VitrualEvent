@page
@model VirtualEvent_WEB.Pages.Events.DetailsModel
@using VirtualEvent_WEB.Model

@{
    ViewData["Title"] = "Event Details";
}

<h2>Event Details</h2>

<div class="card p-4">
    <h3>@Model.TripDetails.Title</h3>
    <p><strong>Description:</strong> @Model.TripDetails.Description</p>
    <p><strong>Date:</strong> @Model.TripDetails.Date.ToShortDateString()</p> 

    <a asp-page="/Events/ViewTrips" class="btn btn-secondary mt-3">Back to Events</a>
</div>
