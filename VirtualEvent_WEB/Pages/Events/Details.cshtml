@page "{id:int}"
@model VirtualEvent_WEB.Pages.Events.DetailsModel
@{
    ViewData["Title"] = Model.Event.Title;
}

<h2>@Model.Event.Title</h2>
<img src="@Model.Event.ImageUrl" class="img-fluid mb-3" alt="Event Image" />
<p><strong>Date:</strong> @Model.Event.Date.ToShortDateString()</p>
<p>@Model.Event.Description</p>