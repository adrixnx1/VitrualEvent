@page
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="text-center mt-5">
    <h1 class="display-4 fw-bold mb-3">Seamless Virtual Events, Efficiently Managed</h1>
    <h1 class="display-4 fw-bold mb-3">PLAN YOUR TRIP NOW</h1>
    <p class="lead mb-4">
        Learn about <a href="https://learn.microsoft.com/aspnet/core" target="_blank" class="text-decoration-none text-primary fw-semibold">Cloud Meet</a>.
    </p>

    <div class="d-flex justify-content-center gap-3">
        <a asp-page="/Account/Register"
           class="btn btn-primary btn-lg px-5 py-2 rounded-pill shadow-sm transition">
            Register
        </a>
        <a asp-page="/Account/Login" class="btn btn-outline-primary btn-lg px-5 py-2 rounded-pill shadow-sm transition">
            Sign In
        </a>
</div><
    </div>
</div>

<style>
    .transition {
        transition: all 0.3s ease-in-out;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 0.5rem 1rem rgba(0, 123, 255, 0.15);

    }
</style>
