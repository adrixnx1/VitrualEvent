@page
@model VirtualEvent_WEB.Pages.UsersListModel
@{
    ViewData["Title"] = "All Users";
}

<h1>@ViewData["Title"]</h1>

@if (Model.Users.Any())
{
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Account Type</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users)
                {
                    <tr>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td>
                        <td>@user.AccountType</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No users available at the moment.</p>
}
