@page
@model VirtualEvent_WEB.Pages.Account.ProfileModel
@{
}
<div class="container mt-5">
    <h2 class="mb-4">Welcome, @Model.User.FirstName!</h2>

    <div class="card p-4 shadow-sm">
        <p><strong>Full Name:</strong> @Model.User.FirstName @Model.User.LastName</p>
        <p><strong>Email:</strong> @Model.User.Email</p>
        <p><strong>Joined On:</strong> @Model.User.RegistrationDate.ToShortDateString()</p>
    </div>
</div>